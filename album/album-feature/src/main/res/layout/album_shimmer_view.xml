<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/album_item_picture_shimmer_size"
            android:layout_height="@dimen/album_item_picture_shimmer_size"
            android:layout_marginStart="@dimen/album_item_picture_shimmer_margin_start"
            android:layout_marginTop="@dimen/album_item_picture_shimmer_margin_top"
            android:layout_marginEnd="@dimen/album_item_picture_shimmer_margin_end"
            android:background="#dddddd"
            app:layout_constraintEnd_toStartOf="@+id/image3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="@dimen/album_item_title_shimmer_width"
            android:layout_height="@dimen/album_item_title_shimmer_height"
            android:layout_marginTop="@dimen/album_item_margin"
            android:background="#dddddd"
            app:layout_constraintEnd_toEndOf="@+id/image1"
            app:layout_constraintStart_toStartOf="@+id/image1"
            app:layout_constraintTop_toBottomOf="@+id/image1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/album_item_picture_shimmer_size"
            android:layout_height="@dimen/album_item_picture_shimmer_size"
            android:layout_marginStart="@dimen/album_item_picture_shimmer_margin_start"
            android:layout_marginTop="@dimen/album_item_picture_shimmer_margin_top"
            android:layout_marginEnd="@dimen/album_item_picture_shimmer_margin_end"
            android:background="#dddddd"
            app:layout_constraintEnd_toStartOf="@+id/image4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="@dimen/album_item_title_shimmer_width"
            android:layout_height="@dimen/album_item_title_shimmer_height"
            android:layout_marginTop="@dimen/album_item_margin"
            android:background="#dddddd"
            app:layout_constraintEnd_toEndOf="@+id/image2"
            app:layout_constraintStart_toStartOf="@+id/image2"
            app:layout_constraintTop_toBottomOf="@+id/image2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image3"
            android:layout_width="@dimen/album_item_picture_shimmer_size"
            android:layout_height="@dimen/album_item_picture_shimmer_size"
            android:layout_marginTop="@dimen/album_item_picture_shimmer_margin_top"
            android:background="#dddddd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="@dimen/album_item_title_shimmer_width"
            android:layout_height="@dimen/album_item_title_shimmer_height"
            android:layout_marginTop="@dimen/album_item_margin"
            android:background="#dddddd"
            app:layout_constraintEnd_toEndOf="@+id/image3"
            app:layout_constraintStart_toStartOf="@+id/image3"
            app:layout_constraintTop_toBottomOf="@+id/image3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image4"
            android:layout_width="@dimen/album_item_picture_shimmer_size"
            android:layout_height="@dimen/album_item_picture_shimmer_size"
            android:layout_marginTop="@dimen/album_item_picture_shimmer_margin_top"
            android:background="#dddddd"
            app:layout_constraintEnd_toEndOf="@id/text3"
            app:layout_constraintStart_toStartOf="@id/text3"
            app:layout_constraintTop_toBottomOf="@id/text3" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="@dimen/album_item_title_shimmer_width"
            android:layout_height="@dimen/album_item_title_shimmer_height"
            android:layout_marginTop="@dimen/album_item_margin"
            android:background="#dddddd"
            app:layout_constraintEnd_toEndOf="@+id/image4"
            app:layout_constraintStart_toStartOf="@+id/image4"
            app:layout_constraintTop_toBottomOf="@+id/image4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>